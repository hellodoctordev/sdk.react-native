{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2018"],
    "types": ["react-native"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "node": ["node_modules/@types/node"],
      "react": ["node_modules/@types/react"],
      "react-native": ["node_modules/@types/react-native"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "typedocOptions": {
    "entryPoints": ["lib/index.js"],
    "out": "docs"
  },
}
